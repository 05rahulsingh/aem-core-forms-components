<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Adaptive Form Telephone Input field"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[core.forms.components.textinput.v1.editor]"
    trackingFeature="core-components:adaptiveform-telephoneinput:v1">
    <content
        granite:class="cmp-adaptiveform-textinput__editdialog"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                  jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/tabs"
                  maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <basic
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Basic"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <guideGlobalLazyField
                                    granite:class="global-lazy-field-margin"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                    fieldDescription="Enable to make the field value available even when the containing panel is not loaded initially or has unloaded."
                                    label="Value accessible in lazy loading context"
                                    name="./isGlobal"
                                    text="Value accessible in lazy loading context"
                                    value="true"/>
                            <richTextValue
                                    jcr:primaryType="nt:unstructured"
                                    sling:hideResource="{Boolean}true">
                            </richTextValue>

                            <multiLine
                                    jcr:primaryType="nt:unstructured"
                                    sling:hideResource="{Boolean}true"/>
                            <allowRichText
                                    jcr:primaryType="nt:unstructured"
                                    sling:hideResource="{Boolean}true">
                            </allowRichText>
                            <autocomplete
                              jcr:primaryType="nt:unstructured"
                              sling:hideResource="{Boolean}true">
                            </autocomplete>
                        </items>
                    </basic>
                    <validation
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <validationPatternGroup
                                    jcr:primaryType="nt:unstructured"
                                    sling:hideResource="{Boolean}true">
                            </validationPatternGroup>
                        </items>
                    </validation>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
