<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Date Picker AF2.0"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[core.forms.components.datepicker.v1.editor]"
    trackingFeature="core-components:adaptiveform-datepicker:v1">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                  jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/tabs"
                  maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <basic
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Basic"
                            granite:class="cmp-adaptiveform-datepicker__editdialogdatepicker"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            active="{Boolean}true"
                            selected="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <name
                                    wrapperClass="cmp-adaptiveform-datepicker__value"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Name"
                                    name="./name"
                                    required="{Boolean}true">
                                <granite:data
                                        jcr:primaryType="nt:unstructured"
                                        node-name-validation=""/>
                            </name>
                            <title
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Title"
                                    name="./jcr:title"/>
                            <hideTitle
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                    name="./hideTitle"
                                    text="Hide title"
                                    value="true"/>
                            <placeholder
                                    jcr:primaryType="nt:unstructured"
                                    granite:class="cmp-adaptiveform-datepicker__placeholder"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Placeholder Text"
                                    name="./placeholder"/>
                            <default
                                    jcr:primaryType="nt:unstructured"
                                    sling:orderBefore="guideGlobalLazyField"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Please enter the date in the required format  &quot;yyyy-mm-dd&quot;."
                                    fieldLabel="Default Value"
                                    emptyText="YYYY-MM-DD"
                                    name="./default"/>
                            <minimumMessage
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription=""
                                    fieldLabel="Minimum Message"
                                    name="./minimumMessage"/>
                            <visible
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                    granite:class="cmp-adaptiveform-datepicker__visible"
                                    name="./visible"
                                    text="Hide Object"
                                    uncheckedValue="true"
                                    value="false">
                            </visible>
                            <visible-typehint
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                    name="./visible@TypeHint"
                                    value="Boolean"/>
                            <enabled
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                    granite:class="cmp-adaptiveform-datepicker__enabled"
                                    name="./enabled"
                                    text="Disable Object"
                                    uncheckedValue="true"
                                    value="false">
                            </enabled>
                            <enabled-typehint
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                    name="./enabled@TypeHint"
                                    value="Boolean"/>
                        </items>
                        <parentConfig
                                jcr:primaryType="nt:unstructured"
                                active="{Boolean}true"/>
                    </basic>
                    <validation
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <minimum
                                    jcr:primaryType="nt:unstructured"
                                    sling:orderBefore="guideGlobalLazyField"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                    fieldDescription="Please enter the date in the required format  &quot;yyyy-mm-dd&quot;."
                                    fieldLabel="Minimum Value"
                                    emptyText="YYYY-MM-DD"
                                    name="./minimum"/>
                            <minimumMessage
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                    fieldDescription="Error message shown when the date entered is before the minimum date"
                                    granite:class="cmp-adaptiveform-datepicker__minimummessage"
                                    fieldLabel="Minimum Error Message"
                                    name="./minimumMessage"/>
                            <maximum
                                    jcr:primaryType="nt:unstructured"
                                    sling:orderBefore="guideGlobalLazyField"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                    fieldDescription="Please enter the date in the required format  &quot;yyyy-mm-dd&quot;."
                                    fieldLabel="Maximum Value"
                                    emptyText="YYYY-MM-DD"
                                    name="./maximum"/>
                            <maximumMessage
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                    fieldDescription="Error message shown when the date entered is after the maximum date"
                                    granite:class="cmp-adaptiveform-datepicker__maximummessage"
                                    fieldLabel="Maximum Error Message"
                                    name="./maximumMessage"/>
                        </items>
                    </validation>
                    <help
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Help Content"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured"/>
                    </help>
                    <accessibility
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Accessibility"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured"/>
                    </accessibility>
                    <patterns
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Patterns"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <displayPatternGroup
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Display Pattern"
                                    sling:resourceType="fd/af/authoring/components/granite/form/fieldset"
                                    title="Display Pattern">
                                <items jcr:primaryType="nt:unstructured">
                                    <displayPatternType
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                            fieldLabel="Type"
                                            name="./displayPatternType">
                                        <datasource
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="fd/af/components/commons/datasources/propertyprovider"
                                                guideDataModel="basic"
                                                fieldType="date-input"
                                                type="formatters"/>
                                    </displayPatternType>
                                    <dataFormat
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Pattern"
                                            name="./dataFormat">
                                    </dataFormat>
                                    <displayFormat
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Pattern"
                                            name="./displayFormat">
                                    </displayFormat>
                                    <editFormat
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Pattern"
                                            name="./editFormat">
                                    </editFormat>
                                </items>
                            </displayPatternGroup>
                            <editPatternGroup
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Edit Pattern"
                                    sling:resourceType="fd/af/authoring/components/granite/form/fieldset"
                                    title="Edit Pattern">
                                <items jcr:primaryType="nt:unstructured">
                                    <editSameAsDisplayPattern
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                            autoWidth="true"
                                            fieldLabel="Same as display pattern"
                                            name="./isEditSameAsDisplayPattern"
                                            text="Same as display pattern"
                                            value="true">
                                    </editSameAsDisplayPattern>
                                    <editPatternType
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                            fieldLabel="Type"
                                            name="./editPatternType">
                                        <datasource
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="fd/af/components/commons/datasources/propertyprovider"
                                                guideDataModel="basic"
                                                fieldType="date-input"
                                                type="formatters"/>
                                    </editPatternType>
                                </items>
                            </editPatternGroup>

                        </items>
                    </patterns>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
